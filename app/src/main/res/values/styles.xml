<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="preferenceTheme">@style/AppTheme.prefsTheme</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeSplash" parent="@style/AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/grey_xlight</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListPrimaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_medium</item>
        <item name="android:textSize">@dimen/label_medium</item>
    </style>

    <style name="ListSecondaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">@dimen/label_small</item>
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_xlight</item>
        <item name="android:textSize">@dimen/label_large</item>
    </style>


    <style name="AppTheme.prefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:textColor">@color/prefs_text_color</item>
    </style>


</resources>
